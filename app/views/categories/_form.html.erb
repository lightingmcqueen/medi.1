<%= form_for @category, :html => { :class => '' } do |f| %>
<div class="row">
 <div class="col-md-6"> 
  <%= f.label :title, :class => '' %>
  <%= f.text_field :title, :class => '' %>
  <%= f.label :description, :class => '' %>
  <%= f.text_area :description, :class => ' ' %>
      <div class="form-group">
    <%= f.label :photos, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :photo %>
    </div>
  </div>
</div>
</div>
<hr>
<input id="contact-form-submit" type="submit" value="SUBMIT">
<img src="images/loader.gif" id="contact-loader" alt="Loading...">
<div id="error-container"></div>
<div id="response-container"></div>


<% end %>


